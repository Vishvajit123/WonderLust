<% layout("/layouts/boilerplate") %>

<body>
    
    <div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Your Details</h3>

    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT"  enctype="multipart/form-data">
        
    <div>
        <label for="title" class="form-label">Title :</label>
        <input name="listing[title]" type="text" class="form-control" value="<%= listing.title %>" required >
    </div>

    <div>
        <label for="image" class="form-label">Upload New Image </label>
        <input type="file" name="listing[image]" class="form-control"> 
    </div>

    <div>
        <label for="description" class="form-label">Description : </label>
        <textarea name="listing[description]" class="form-control" required> <%=listing.description %>"</textarea>
    </div>

<div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price : </label> 
        <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>" required >
    </div>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country : </label>
        <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required>
    </div>
</div>

    <div>
        <label for="location" class="form-label">Location : </label>
        <input name="listing[location]" type="text" class="form-control" value="<%= listing.location %>"required >
       <br>
    </div>
        <button style="background-color: red;" class="btn btn-dark">Edit</button>
    </form>
</div>
</div>


</body>
</html>
